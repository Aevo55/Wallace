@model EmployeesPageModel
<h2>Employees Page</h2>
<h3>@ViewData["Information"]</h3>

<style>
   .container-table{
       background-color: black;
       margin: 10px 0px 70px ;
       height: 800px;
       width: 1200px;
   }
    .add-employee {
        height: 70px;
        width: 190px;
        margin: 143px 20px 0px 930px;
        background-color: yellow;
    }
    .delete-employee {
        height: 70px;
        width: 190px;
        margin: 100px 20px 0px 930px;
        background-color: yellow;
    }
    .modify-employee {
        height: 70px;
        width: 190px;
        margin: 100px 20px 0px 930px;
        background-color: yellow;
    }
    #button1{
        align-items:center;
        height:70px;
        width: 190px;
        font-size: 20px;
    }
    #button2 {
        align-items: center;
        height: 70px;
        width: 190px;
        font-size: 20px;
    }
    #button3 {
        align-items: center;
        height: 70px;
        width: 190px;
        font-size: 20px;
    }
    .Search-Bar {
        background-color: black;
        margin: -540px 10px 10px 905px;
        height: auto;
        width: 217px;
    }
    #search-button{
        height:35px;
        
    }
    thead,
    tfoot {
        background-color: #3f87a6;
        color: #fff;
    }

    tbody {
        background-color: #e4f0f5;
        
    }
    table {
        border-collapse: collapse;
        border: 2px solid rgb(200, 200, 200);
        letter-spacing: 1px;
        font-family: sans-serif;
        font-size: 20px;
        width: 800px;
        margin: 30px;
    }

    td,
    th {
        border: 2px solid black;
        padding: 5px 10px;
    }

    td {
        text-align: left;
        padding: 5px,20px,5px,200px;
        
    }
    th{
        background-color:#a70000;
        color: white;
    }
    tr:nth-child(even){
        background-color: #e8e8e8;
    }
    tr:nth-child(odd){
        background-color: white;
    }
    #header{
        text-align: center;
        background-color: blue;
        color: white;
        font-stretch: expanded;
        height: 60px;
        font-family: sans-serif;
        font-size: 40px;
    }
</style>
<body >
    <div class="container-table">
        <table align="left">
            <tr>
                <td id="header" colspan="3">Employees Record</td>
            </tr>
            <tr>
                <th>Name</th>
                <th>Title </th>
                <th>Salary</th>
            </tr>

            @{
                for (int i = 0; i < Model.Employees.Count; i++)
                {
                    @Html.Raw("<tr>");
                    @Html.Raw("<td>" + Model.Employees[i].name + "</td>");
                    @Html.Raw("<td>" + Model.Employees[i].title + "</td>");
                    @Html.Raw("<td>" + Model.Employees[i].salary.ToString() + "</td>");
                    @Html.Raw("</tr>");
                }
            }
        </table>
        <p>.</p>
        <div class="add-employee">
            <p>
                <button id="button1" type="button" onclick="alert('Your current employees are fine. You don\'t need new one')">ADD EMPLOYEE</button>
            </p>
        </div>
        <div class="delete-employee">
            <p>  <button id="button2" type="button" onclick="alert('Hell yeah. We fire them')">FIRE EMPLOYEE</button></p>
        </div>
        <p>.</p>
        <div class="modify-employee">
            <p> <button id="button3" type="button" onclick="alert('No need to modify. Just kick him out')">MODIFY EMPLOYEE</button></p>
        </div>
        <div class="Search-Bar">
            <form action="">
            <input id ="search-button" type ="text" placeholder="Search..." name="Search-Bar" />
            <button type="submit" >Find</button>
            
            </form>

        </div>
    </div>
 </body>