@model EmployeesPageModel
<h2>Employees Page</h2>
<h3>@ViewData["Information"]</h3>

<style>
    
    thead,
    tfoot {
        background-color: #3f87a6;
        color: #fff;
    }

    tbody {
        background-color: #e4f0f5;
        
    }
    table {
        border-collapse: collapse;
        border: 2px solid rgb(200, 200, 200);
        letter-spacing: 1px;
        font-family: sans-serif;
        font-size: 20px;
        width: 800px;
    }

    td,
    th {
        border: 2px solid black;
        padding: 5px 10px;
    }

    td {
        text-align: left;
        padding: 5px,20px,5px,200px;
        
    }
    th{
        background-color:#a70000;
        color: white;
    }
    tr:nth-child(even){
        background-color: #e8e8e8;
    }
    tr:nth-child(odd){
        background-color: white;
    }
    #header{
        text-align: center;
        background-color: blue;
        color: white;
        font-stretch: expanded;
        height: 60px;
        font-family: sans-serif;
        font-size: 40px;
    }
</style>
<body >
    <table align="left">
    <tr>
        <td id="header" colspan="3">Employees Record</td>
    </tr>
    <tr>
        <th>Name</th>
        <th>Phone </th>
        <th>Salary</th>
    </tr>

    @{
        for (int i = 0; i < Model.Employees.Count; i++)
        {
            @Html.Raw("<tr>");
            @Html.Raw("<td>" + Model.Employees[i].name + "</td>");
            @Html.Raw("<td>" + Model.Employees[i].phone.ToString() + "</td>");
            @Html.Raw("<td>" + Model.Employees[i].salary.ToString() + "</td>");
            @Html.Raw("</tr>");
        }
    }
    </table>
 </body>